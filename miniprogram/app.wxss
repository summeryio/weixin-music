@import './common/styles/iconfont.wxss';

image/* .lazy-img */ {
    background-color: #f6f7f9;
}

page {
    /* 禁止页面左右拖动 */
    overflow-x: hidden;
    width: 100%;

    font-size: 32rpx;
    background-color: #fcfcfd;
}
.t-hide {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.navigator-hover {
    background-color: transparent;
    color: #e4002b;
}

/* loading */
.loading {
    margin-top: 20rpx;
    text-align: center;
    color: #999;
}
.loading .icon {
    width: 40rpx;
    height: 40rpx;
    vertical-align: top;
}
.loading image {
    background-color: transparent;
}


/* 导航栏 */

.lxy-nav-bar-search {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
    -ms-flex-align: center;
    align-items: center;
    width: 100%;
    /* prettier-ignore */
    height: 32PX;
    /* prettier-ignore */
    font-size: 16PX;
    /* prettier-ignore */
    border-radius: 16PX;
    /* prettier-ignore */
    padding-left: 5PX;
    position: relative;
    background: #f6f6f6;

    text-align: center;
  }
  
  .srch-ipt {
    /* prettier-ignore */
    height: 32PX;
    text-align: left;
    /* prettier-ignore */
    font-size: 15PX;
  }
  
  .ipt-placeholder {
    /* prettier-ignore */
    font-size: 15PX;
    color: #bebebe;
    text-align: left;
  }
  
  .lxy-nav-bar-search__input {
    flex: 1;
  }
  
  .lxy-nav-bar-search__icon {
    /* prettier-ignore */
    width: 22PX;
    /* prettier-ignore */
    height: 22PX;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
    -ms-flex-pack: center;
    justify-content: center;
    background-image: url(data:image/png;base64,);
    background-repeat: no-repeat;
    background-size: cover;
  }
  
  .location {
    /* prettier-ignore */
    font-size: 14PX;
    /* prettier-ignore */
    width: 52PX;
    height: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    -ms-flex-align: center;
    align-items: center;
    color: #fff;
    position: relative;
    /* prettier-ignore */
    padding-left: 10PX;
  }
  
  .location .icon {
    width: 0;
    height: 0;
    /* prettier-ignore */
    border-left: 5PX solid transparent;
    /* prettier-ignore */
    border-right: 5PX solid transparent;
    /* prettier-ignore */
    border-top: 5PX solid #fff;
    /* prettier-ignore */
    margin-left: 2.5PX;
  }
  
  .location .btn {
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0;
    width: 100%;
    height: 100%;
  }