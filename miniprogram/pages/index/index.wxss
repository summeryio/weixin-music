.banner {
  width: 100%;
  height: 300rpx;
}
.slide-image {
  width: 100%;
  height: 100%;
}

.index-title {
  position: relative;
  left: 3%;
  margin: 28rpx 0;
  line-height: 30rpx;
}
.index-title navigator {
  display: inline-block;
}
.index-title .text {
  position: relative;
  display: inline-block;
  padding-left: 8rpx;
  font-size: 36rpx;
}
.index-title .text:after {
  content: " ";
  position: absolute;
  left: 0;
  width: 4rpx;
  height: 32rpx;
  background-color: #e4002b;
}
.index-title .icon-right_ {
  vertical-align: -6rpx;
}

