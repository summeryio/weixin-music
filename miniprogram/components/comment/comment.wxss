@import '/app.wxss';

.m-comment .t {
    padding: 0 10rpx;
    height: 48rpx;
    line-height: 48rpx;
    font-size: 24rpx;
    color: #666;
    background: rgba(0, 0, 0, 0.05); 
}
  
.m-comment .item {
